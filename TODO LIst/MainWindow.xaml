<Window x:Class="TODO_LIst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO_LIst"
        mc:Ignorable="d"
        
        Title="TODO List" Height="800" MinHeight="600" Width="1100" MinWidth="750"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="LightGray">

    <!--
    WidowChrome은 윈도우 테두리와 타이틀 바가 존재하는곳을 의미한다.
    난 OS에서 지원하는 윈도우 바를 지웠기때문에 최소화, 최대화, 닫기, 크기조절, 위치조절을 직접 구현해야한다.
    아래에서 크기조절 기능을 OS에서 지원받기위해 Window.Style을 사용해 WindowChrome의 기능을 설정한다.
    
    ResizeBorderThickness는 윈도우 테두리를 클릭-드래그하여 창 크기조절을할때 클릭 가능한 영역의 크기를 말한다.
    CaptionHeigt는 OS가 인식하는 상단 타이틀바의 크기를 의미한다.(그 아래있는 컨트롤들은 클릭 불가능)
    CornerRadius는 테두리를 곡선형으로 만드는 기능이다.
    GlassFrameThickness는 창 외곽의 글래스 영역의 두께를 의미한다(Glass 효과를 만들때 사용)
    UseAeroCaptionButtons는 기본 최소화, 최대화, 닫기 버튼을 사용할지 말지 여부이다(WindowStyle이 None일때는 True여도 미작동)
    -->
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome
                        ResizeBorderThickness="8"
                        CaptionHeight="0"
                        CornerRadius="0"
                        GlassFrameThickness="0"
                        UseAeroCaptionButtons="True"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Grid>
        <!-- 전체 영역 크기 조절 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 커스텀 타이틀바 -->
            <RowDefinition Height="Auto" /> <!-- 년/월 표시, 넘기기 버튼 -->
            <RowDefinition/> <!-- 메인 UI(날짜 표시) -->
        </Grid.RowDefinitions>

        <!-- 커스텀 타이틀바 UI -->
        <Border Grid.Column="0" Grid.ColumnSpan="100" Background="Gray" Padding="10"
                    MouseDown="Border_MouseDown">
            <Grid>
                <!-- 타이틀 텍스트 -->
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                               Text="Todo List" FontSize="15" FontWeight="Bold"/>

                <!-- 불투명도 조절, 최소화, 최대화, 닫기 그룹 -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <!-- 불투명도 조절 슬라이더 -->
                    <Slider VerticalAlignment="Center" Width="100" Margin="0,0,20,0"
                               Value="100" Minimum="30" Maximum="100"
                               ValueChanged="Slider_Opacity"/>
                    <!-- 최소화 버튼 -->
                    <Button Content="_" Margin="2.5"
                                Width="20" Height="20"
                                Click="OnClick_Minimize"/>
                    <!-- 최대화 버튼 -->
                    <Button Content="ㅁ" Margin="2.5"
                                Width="20" Height="20"
                                Click="OnClick_Maximize"/>
                    <!-- 닫기 버튼 -->
                    <Button Content="X" Margin="2.5"
                                Width="20" Height="20"
                                Click="OnClick_Close"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 일정 추가, 년/월 표시, 넘기기 버튼 -->
        <Border Grid.Column="0" Grid.ColumnSpan="100" Grid.Row="1" Padding="10">
            <Grid>
                <!-- 일정 추가 버튼 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Button Content="+" FontSize="15" FontWeight="Bold"
                                    MinWidth="30" Width="Auto" Height="Auto" Padding="5"
                                    Click="OnClick_Calneder"/>
                </StackPanel>

                <!-- 년/월 표시, 넘기기 버튼 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="&lt;" FontSize="15"
                                    Width="30"
                                    Click="OnClick_PreviousMonth"/>
                    <Button Content="Binding 해야함(년/월)" FontSize="15"
                                    MinWidth="110" Width="Auto" Height="Auto" Margin="10,0,10,0" Padding="5"
                                    Click="OnClick_Calneder"/>
                    <Button Content="&gt;" FontSize="15"
                                    Width="30"
                                    Click="OnClick_NextMonth"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 오늘 할 일, 끝낸 일 UI  -->
        <Border Grid.Column="0" Grid.Row="2" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- 셀 공통 스타일 -->
                <Grid.Resources>
                    <Style x:Key="TodoCellStyle" TargetType="Border">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                </Grid.Resources>

                <!-- 할 일 -->
                <Border Grid.Row="0" Style="{StaticResource TodoCellStyle}" Margin="0,0,0,5">
                    <TextBlock Text="할 일" FontSize="15" FontWeight="Bold"/>
                </Border>
                <!-- 끝낸 일 -->
                <Border Grid.Row="1" Style="{StaticResource TodoCellStyle}" Margin="0,5,0,0">
                    <TextBlock Text="끝난 일" FontSize="15" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <!-- 달력 UI -->
        <Border  Grid.Column="1" Grid.Row="2" Padding="10">
            <Grid x:Name="DateGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="CalendarGrid" Grid.Row="1" Grid.ColumnSpan="100">
                </Grid>
            </Grid>
        </Border>
        
    </Grid>
</Window>
